    <script>
        document.addEventListener('DOMContentLoaded', () => {
            let ar = ['/images/f1.webp', '/images/f2.webp', '/images/f3.webp', '/images/f4.webp'];
            let i = 0;
            const img = document.querySelector('.main');

            setInterval(() => {
                img.classList.add('hidden');
                setTimeout(() => {
                    img.setAttribute('src', ar[i]);
                    img.classList.remove('hidden');
                    i = (i + 1) % ar.length;
                }, 2000);
            }, 10000);

            const popup = document.getElementById('popup');
            const popupImage = document.getElementById('popup-image');
            const popupFlightNumber = document.getElementById('popup-flight-number');
            const popupDate = document.getElementById('popup-date');
            const popupDescription = document.getElementById('popup-description');
            const closePopup = document.getElementById('close-popup');
            function openPopup(image, flightNumber, date, description) {
                popupImage.src = image;
                popupFlightNumber.textContent = flightNumber;
                popupDate.textContent = date;
                popupDescription.textContent = description;
                popup.style.display = 'flex';
                document.body.style.overflow = 'hidden';
            }
            closePopup.addEventListener('click', () => {
                popup.style.display = 'none';
                document.body.style.overflow = 'auto';
            });
            popup.addEventListener('click', (e) => {
                if (e.target === popup) {
                    popup.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }
            });
            const flightBoxes = document.querySelectorAll('.flight-box');
            flightBoxes.forEach(box => {
                box.addEventListener('click', () => {
                    const image = box.querySelector('img').src;
                    const flightNumber = box.querySelector('.flight-number').textContent;
                    const date = box.querySelector('.date').textContent;
                    const description = box.querySelector('.description').textContent;
                    openPopup(image, flightNumber, date, description);
                });
            });
            window.openPopup = openPopup;
        });
